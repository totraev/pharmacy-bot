section.content-header
  h1
    | Orders
    small list of orders

section.content
  .box
    .box-body.no-padding
      table.table.table-striped.table-hover
        thead
          tr
            th Name
            th Location
            th Phone Number
            th Amount of Products
            th Total To Pay
        tbody
          tr(ng-repeat="order in vm.pager.orders" ng-click="vm.goTo(order._id)")
            td
              b {{order.name}}
            td
              a(href="#")
                i.fa.fa-map-marker(style="margin-right: 5px")
                | Show on map
            td {{order.phone}}
            td {{order.products.length}}
            td 120$
    .box-footer.clearfix
      ul.no-margin.pagination-sm.pull-right(uib-pagination ng-model="vm.pager.currentPage" boundary-link-numbers="true" total-items="vm.pager.totalItems" ng-change="vm.pageChanged()" max-size="vm.pager.maxSize")
